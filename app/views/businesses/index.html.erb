<%= form_tag("/businesses", method: "get") do %>
  <div class="flex border-grey-light border">
  <input class="w-full rounded ml-1" type="text" placeholder="Search for a business by name..." <%= text_field_tag(:q) %>
  <button class="bg-grey-lightest border-grey border-l shadow hover:bg-grey-lightest"   <%= submit_tag("Search") %>
  <span class="w-auto flex justify-end items-center text-grey p-2 hover:text-grey-darkest">
      <i class="material-icons text-xs">search</i>
  <% end %>
  </span>
  </button>
</div>

<br></br>
<% @businesses.each do |business| %>
<div class="py-5 px-8 bg-pink-200">
<div class="text-center">
  <header class="rounded-t-lg font-bold text-2xl py-5 px-8"><%= business.name%></header>
</div>
  <div class="text-center">
    <button class="mt-4 rounded-lg px-4 py-2 bg-blue-200 text-black shadow hover:shadow-xl duration-300">
    <%= link_to "Learn More", business_path(business.id) %>
    </button>
  </div>
  <% end %>
</div>
</div>