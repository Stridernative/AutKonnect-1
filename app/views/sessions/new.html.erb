<header class="py-10 bg-blue-200 text-black text-5xl font-caveat text-center"> Login </header>

<p><%= flash[:error] %></p>

<%= form_for(:user) do |f| %>
    <%= f.label :username %>
    <%= f.text_field :username %>
    <%= f.label :password %>
    <%= f.password_field :password %>
    <%= f.submit "Log In" %>
    <% end %>