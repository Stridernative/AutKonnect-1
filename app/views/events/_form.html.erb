<%= render partial: 'layouts/errors', locals: {object: @event}  %>
<%= form_for(@event) do |f|%>
  <div>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <div>
    <%= f.label :description %>
    <%= f.text_field :description %>
  </div>
 

  <p> Select a Business that already exists: </p>
  <div>
    <%= f.collection_select :business_id, Business.all, :id, :name, include_blank: 'Select One'%>

  </div>

  <p> Or create a new Business: </p>
  <div>
    <%=f.fields_for :business do |a| %>
      <%= a.label :name %>
      <%= a.text_field :name %>
    <% end %>
  </div>
  <br>
  <%= f.submit %>
<% end %>