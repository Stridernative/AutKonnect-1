<header class="py-10 bg-blue-200 text-black text-5xl font-caveat text-center"> <%=  display_header(@review)%> </header>
<br></br>
<%= render partial: 'layouts/errors', locals: {object: @review}  %>
   
<%= form_for(@review) do |f| %>
  <% if params[:event_id] %>
  <%= f.hidden_field :event_id %>
  <% else %>
    <div>
    <%= f.label :event_id, "Please choose an event" %>
    <%= f.collection_select :event_id, Event.alpha, :id, :name_and_business, include_blank: true %>
  </div>
<% end %>
<div>
    <%= f.label :stars %>
    <%= f.number_field :stars, min: 0, max: 5 %>
  </div>
  <br>
  <div>
    <%= f.label :content %>
    <%= f.text_area :content %>
  </div>
  <br>
  

  <%= f.submit %>
    <% end %>